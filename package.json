{
  "name": "markdown-clever-lists",
  "displayName": "Markdown Clever Lists",
  "description": "Context-aware list continue, indent and un-indent for markdown",
  "version": "0.0.1",
  "repository": "https://github.com/SamAdamDay/markdown-clever-lists",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "keybindings": [
      {
        "command": "markdown-clever-lists.onEnterKey",
        "key": "enter",
        "when": "editorTextFocus && editorLangId == markdown"
      },
      {
        "command": "markdown-clever-lists.onOutdent",
        "key": "Ctrl+[",
        "mac": "Cmd+[",
        "when": "editorTextFocus && editorLangId == markdown"
      },
      {
        "command": "markdown-clever-lists.onIndent",
        "key": "Ctrl+]",
        "mac": "Cmd+]",
        "when": "editorTextFocus && editorLangId == markdown"
      }
    ],
    "configuration":[
      {
        "title": "Markdown Clever Lists",
        "properties": {
          "markdown-clever-lists.blankListItemBehaviour" : {
            "type": "string",
            "default": "Outdent",
            "enum": [
              "Outdent",
              "Remove List Item"
            ],
            "enumDescriptions": [
              "Outdent the list item each time the enter key is pressed",
              "Remove the list item immediately"
            ],
            "description": "What to do when the enter key is pressed on a blank list item"
          },
          "markdown-clever-lists.defaultBullets" : {
            "type": "array",
            "default": ["-"],
            "items": {
              "type": "string"
            },
            "description": "The default bullet characters to use when creating a new list item. Will cycle through these per indentation level. Use '1.' or '1)' for numbered lists"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}